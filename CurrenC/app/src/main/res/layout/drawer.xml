<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/left_drawer"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:background="@android:color/white"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="             TKM DashBoard"
            android:id="@+id/textView"
            android:textColor="#6f7676"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Guest"
            android:id="@+id/mainuser"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#6f7676"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Documents"
            android:textAllCaps="false"
            android:id="@+id/button2"
            android:background="#ffffff"
            android:textColor="#6f7676" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Eazy Campus"
            android:id="@+id/button3"

            android:background="#ffffff"
            android:singleLine="false"
            android:textColor="#6f7676"
            android:onClick="eazyact" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TKMCE Live"
            android:id="@+id/button4"
            android:textAllCaps="false"

            android:background="#ffffff"
            android:textColor="#6f7676"
            android:onClick="liveact" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FeedBack"
            android:textAllCaps="false"
            android:id="@+id/button5"
            android:background="#ffffff"
            android:textColor="#6f7676"
            android:onClick="feedact" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Railway Info"
            android:textAllCaps="false"
            android:id="@+id/button6"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:textColor="#6f7676"
            android:onClick="trollact" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developers"
            android:textAllCaps="false"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:textColor="#6f7676"
            android:onClick="developact" />

    </LinearLayout>
</RelativeLayout>
